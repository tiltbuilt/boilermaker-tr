/**
* components/global.css
*
* Project-wide styles
*
*/

/* set up style for inner div that places content above background divs */
 
.inner {
   position: relative;
   z-index: 10;
   height: 100%;
    
   &::after {
      content: '';
      clear: both;
      height: 0px;
      width: 0px;
      display: table;
   }    
}

 
/* set up basic styles for background element */
 
.background {
   position: absolute;
   z-index: 1;
   width: 100%;
   height: 100%;
   left: 0px;
   top: 0px;
   right: 0px;
   bottom: 0px;
}

.bg-video {
   iframe {
      @apply w-full h-full;
   }
}


/* GENERAL TEXT STYLES */
 
p, ul, ol {
   margin: 0;
   margin-top: theme('spacing.normal');    
  
   & > li {	 
      margin: 0;
      margin-top: theme('spacing.base');
   }

   ul, ol {
      margin-bottom: 0;
   }
}
 
*:not(.column):first-child {
   margin-top: 0;
}
  
 
.main {  
   
   [class*='text-wrap-left']:first-child + p {
    margin-top: 0;
   }
   
   [class*='text-wrap-right']:first-child + p {
    margin-top: 0;
   }
   
   ul.bullet-list {	 
      list-style-type: none;
      list-style-position: outside;
            
      .list-item-content {
         display: block; 
      }
      
      & > li {
         display: flex;
         justify-content: start;
         align-items: start;
         /*margin-left: 1.5em;*/
      }
       
      li::before {
         content: "\025B8";  /* Add content: \2022 is the CSS Code/unicode for a bullet */
         display: block; /* Needed to add space between the bullet and the text */
         width: 1em; /* Also needed for space (tweak if needed) */
         margin-right: 0.5em;      
      }
   }
   
   ul.lined-list {
      li {
         padding-top: theme('spacing.half');
         border-top: solid 1px;
      
         &:first-child {
            border-top: none;
         }      
      }
   }
   
   ol {	 
      list-style-type: decimal;
      list-style-position: outside;
      margin-left: 1.1em;
   }
}
 
 
.share-links {

   @apply flex justify-start content-center items-center;

   .share-header {
      @apply block uppercase mr-base text-lg;
   }

   a {
      @apply block mr-half;
      transition: color 1s cubic-bezier(0.075, 0.82, 0.165, 1);
      
      &:hover {
      
      }
      
      svg {
         @apply block;
         width: 2.4rem;
         height: 2.4rem;
         fill: currentColor;
      }
   }
}

.text-center > .share-links {
   @apply justify-center;
}
 
 
 
/* LOAD SPINNER */
 
.spinner {
   width: 5.6rem;
   height: 5.6rem;
   border-radius: 50%;
   background: conic-gradient(#0000 10%,#e1e1e2);
   -webkit-mask: radial-gradient(farthest-side,#0000 calc(100% - 9px),#000 0);
   animation: spinner-zp9dbg 1s infinite linear;
}

@keyframes spinner-zp9dbg {
   to {
      transform: rotate(360deg);
   }
}
 
 
 
/* NOTIFICATION BAR */ 
 
.notification-bar-icon svg, .notification-bar-icon i {  
    display: block;
    margin-left: auto;
    margin-right: auto;
    fill: currentColor;
    width: 7.5rem;
    height: 7.5rem;
    font-size: 7.5rem;
    line-height: 1;	 
}
