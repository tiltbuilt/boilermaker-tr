		} 
		
		&:last-child {
			@apply mr-none;
		} 
	} 
}

.btn-lg {
	@apply text-scaling-lg py-6;
	
	&.btn-standard {
		@apply mx-6 px-12; 
		
		&:first-child {
			@apply ml-none;
		} 
		
		&:last-child {
			@apply mr-none;
		} 
	}
	
	&.btn-text, &.btn-text-arrow {
		@apply mx-6 px-0;
		
		&:first-child {
			@apply ml-none;
		} 
		
		&:last-child {
			@apply mr-none;
		} 
	} 	 
}