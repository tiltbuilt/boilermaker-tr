# The application ID used to to uniquely store session and cache data, mutex locks, and more
CRAFT_APP_ID=

# The environment Craft is currently running in (dev, staging, production, etc.)
CRAFT_ENVIRONMENT=dev

# The secure key Craft will use for hashing and encrypting data
CRAFT_SECURITY_KEY=

# Database connection settings
CRAFT_DB_DRIVER=mysql
CRAFT_DB_SERVER=db
CRAFT_DB_PORT=3306
CRAFT_DB_DATABASE=db
CRAFT_DB_USER=db
CRAFT_DB_PASSWORD=db
CRAFT_DB_SCHEMA=public
CRAFT_DB_TABLE_PREFIX=

# General settings (see config/general.php)
SITE_NAME="Tilt Boilermaker"
SITE_EMAIL="webbies@tiltbuilt.com"
DEV_MODE=true
ALLOW_ADMIN_CHANGES=true
DISALLOW_ROBOTS=true
CRAFT_WEB_ROOT="/var/www/html/web"
MAILPIT_SMTP_PORT="1025"
PRIMARY_SITE_URL="${DDEV_PRIMARY_URL}"
MAILPIT_SMTP_HOSTNAME="127.0.0.1"
VITE_USE_DEV_SERVER=1

# ASSET VOLUME SETTINGS
IMAGE_UPLOADS_URL="${PRIMARY_SITE_URL}/uploads/images"
IMAGE_UPLOADS_PATH="${CRAFT_WEB_ROOT}/uploads/images"
DOC_ASSETS_URL="${PRIMARY_SITE_URL}/uploads/docs"
DOC_ASSETS_PATH="${CRAFT_WEB_ROOT}/uploads/docs"
CONTENT_VIDEO_ASSETS_URL="${PRIMARY_SITE_URL}/uploads/contentvideos"
CONTENT_VIDEO_ASSETS_PATH="${CRAFT_WEB_ROOT}/uploads/contentvideos"
BG_VIDEO_ASSETS_URL="${PRIMARY_SITE_URL}/uploads/bgvideos"
BG_VIDEO_ASSETS_PATH="${CRAFT_WEB_ROOT}/uploads/bgvideos"

# ASSET VOLUME FILE SYSTEMS
IMAGES_FS="images"
DOC_FS="docs"
CONTENT_VIDEO_FS="contentVideos"
BG_VIDEO_FS="backgroundVideos"

# IMG IX 
IMGIX_SRC_DOMAIN="website.imgix.net"
IMGIX_API_KEY=""
IMGIX_TOKEN=""

# Postmark for Email Service
PM_API_TOKEN=""
PM_MESSAGE_STREAM="broadcast"

# SERVD
SERVD_PROJECT_SLUG=""
SERVD_SECURITY_KEY=""