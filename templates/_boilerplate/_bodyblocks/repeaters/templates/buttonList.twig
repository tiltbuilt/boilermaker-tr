{# Load in global macros for use across all Twig templates #}
{% import '_boilerplate/_macros/globalMacros' as gMacros %}

<div class="repeater-list-btn anim-pass">
{% for repeaterItem in repeaterData %}	
  <div {{ gMacros.buildClassList('elem-block repeater-list-btn-item', listItemOuterClasses, null) -}}>
    <div class="anim-wrapper anim-child">
      <div {{ gMacros.buildClassList('inner repeater-list-btn-item-inner', null, null) -}}>        
          <a href="{{ repeaterItem.url }}" {{ gMacros.buildClassList('btn repeater-list-btn-item-btn', listItemBtnClasses, null) -}}>{{ gMacros.stripTags(repeaterItem.title, '<b><strong><i><em><br>') }}</a>        
      </div>
    </div>
  </div>	
{% endfor %}
</div>